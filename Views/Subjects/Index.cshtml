@model IEnumerable<Subject>

<h3>List of subjects</h3>

@if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
{
    <a class="btn btn-sm btn-outline-primary mb-1" asp-action="Create">Create new</a>
}
@foreach (var subject in Model)
{
    <div class="border border-1 border-dark p-2 rounded mb-1">
        <h5>@subject.Name</h5>
        <p>Id:@subject.Id</p>
        @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
        {
            <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@subject.Id">Edit</a>
            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@subject.Id">Delete</a>
        }

    </div>
}
