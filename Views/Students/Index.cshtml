@model IEnumerable<Student>

<h3>List of students</h3>

<a class="btn btn-sm btn-outline-primary mb-1" asp-action="Create">Create new</a>

@foreach (var student in Model) {
    <div class="border border-1 border-dark p-2 rounded mb-1">
        <h5>@student.FirstName @student.LastName</h5>
        <p>Id: @student.Id</p>
        <p>Date of Birth: @student.DateOfBirth.ToShortDateString()</p>
        <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
    </div>
}
<form method="post" enctype="multipart/form-data" asp-controller="FileUpload"
      asp-action="Upload">
    <div class="form-group">
        <input type="file" name="file" />
    </div>
    <div class="form-group">
        <input type="submit" value="Upload" />
    </div>
</form>
